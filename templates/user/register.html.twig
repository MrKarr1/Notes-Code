{% extends 'base.html.twig' %}


{% block body %}
	<main class="register">
		<div class="registers">
			<a href="{{path('app_home')}}"><img src="{{ asset('img/logo/Notes-Code.png') }}" alt="logo Notes Code"></a>
			{{ form_start(form) }}
			{{ form_errors(form) }}
			{{ form_label(form.username) }}
			{{ form_widget(form.username) }}
			{{ form_label(form.email) }}
			{{ form_widget(form.email) }}
			{{ form_label(form.plainPassword) }}
			{{ form_widget(form.plainPassword) }}
			{{ form_label(form.avatar) }}
			{{ form_widget(form.avatar) }}
			{{ form_label(form.agreeTerms) }}
			{{ form_widget(form.agreeTerms) }}		
			<button class="btn">{{ button_label|default('Valider') }}</button>
			{{ form_end(form) }}
		</div>
	</main>
{% endblock %}
