{% extends 'base.html.twig' %}

{% block body %}
	<div class="nav-laterale">
		{% include "include/nav.html.twig" %}
	</div>
	<main class="edit-user">
		<div class="edits-users">
			<div class="flex-button">
				<button class="btn" onclick="window.location.href='{{ path('app_account') }}'">
					Retour
				</button>
				<button class="btn" onclick="window.location.href='{{ path('app_user_edit_password', {'id': user.id}) }}'">
					Pour Modifier mot de passe
				</button>
			</div>
			{{ form_start(form) }}
			{{ form_errors(form) }}
			{{ form_label(form.username) }}
			{{ form_errors(form.username) }}
			{{ form_widget(form.username) }}
			{{ form_label(form.email) }}
			{{ form_errors(form.email) }}
			{{ form_widget(form.email) }}
			{{ form_label(form.avatar) }}
			{{ form_errors(form.avatar) }}
			{{ form_widget(form.avatar) }}
			<div class="flex-button">
				<button class="btn">{{ button_label|default('Valider') }}</button>
			</div>
			{{ form_end(form) }}
		</div>
	</main>
{% endblock %}
