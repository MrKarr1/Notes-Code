{% extends 'base.html.twig' %}


{% block body %}
	<div class="nav-laterale">
		{% include "include/nav.html.twig" %}
	</div>
	<div class="carte manage">
		<main class="manage-langage">
			<div class="flex-button">
				<button class="btn" onclick="window.location.href='{{ path('app_account') }}'">
					Retour
				</button>
			</div>
			<h1>GÃ©rer les  Langage</h1>
			<div class="flex-message">
				{% for message in app.flashes('success') %}
					<div class="flashes-message">{{ message }}</div>
				{% endfor %}
			</div>
			{{ form_start(form) }}
			{{ form_widget(form) }}
			<div class="flex-button">

				<button class="btn">{{ button_label|default('Valider') }}</button>
			</div>
			{{ form_end(form) }}

			<div class="note-table">
				<div class="langage langage-add" id="div-langage">
					<p>
						<strong>Langages</strong>
					</p>
					<table>
						<thead>
							<tr>
								<th>Nom Langage</th>
								<th>Nom Monaco Editor</th>
								<th>Action</th>
							</tr>
						</thead>
						{% for langage in langages %}
							<tbody>
								<tr>
									<td>
										<span>{{langage.displayName}}</span>
									</td>
									<td>
										<span>{{langage.technicalName}}</span>
									</td>
									<td
										class="action">
										{# {{ include('langage/_delete_form.html.twig') }} #}
										<button class="btn icone" onclick="window.location.href='{{ path('app_langage_edit', {'id': langage.id}) }}'">
											<i class="fa-solid fa-arrows-rotate"></i>
										</button>
									</td>
								</tr>
							</tbody>
						{% endfor %}
					</table>
				</div>
			</div>
		</main>
	</div>
{% endblock %}
