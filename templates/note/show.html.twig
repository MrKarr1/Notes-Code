{% extends 'base.html.twig' %}
{% block title %}
	{{ note.name }}
{% endblock %}

{% block body %}
	<div class="nav-laterale">
		{% include "include/nav.html.twig" %}
	</div>
	<main class="show-note">
		<h1>{{ note.name }}</h1>
		{% if note.tag %}
			{% for tag in note.tag %}
				<span>{{tag.name}}</span>
			{% endfor %}
		{% else %}
			<span>Pas de Tag</span>
		{% endif %}
		{% if note.folder %}
			{% for folders in note.folder %}
				<span>{{folders.name}}</span>
			{% endfor %}
		{% else %}
			<span>Pas de dossier</span>
		{% endif %}
		<span>{{ note.langage.displayName }}</span>
		<span>{{ note.createdAt ? note.createdAt|date('d-m-Y') : '' }}</span>
		<div id="note-code">{{ note.code }}</div>
		<div id="note-language">{{ note.langage.technicalName|lower }}</div>
		<div id="monaco-editor" class="monaco-editor"></div>
		<p>{{note.description}}</p>

		<button class="btn">
			<a href="{{ path('app_account') }}">Retour</a>
		</button>
		<button class="btn">
			<a href="{{ path('app_note_edit', {'id': note.id}) }}">Modifier</a>
		</button>

		{{ include('note/_delete_form.html.twig') }}

	</main>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/monaco-editor/0.52.2/min/vs/loader.min.js"></script>
	<script src="{{ asset('monaco/view.js') }}"></script>
{% endblock %}
