{% extends 'base.html.twig' %}
{% set nav = true %}

{% block body %}

	<h2>Ajouter une note</h2>


	{{ form_start(form) }}
	<div id="note-code" style="display: none;">{{ form.code.vars.value|json_encode|raw }}</div>
	<div id="note-language" style="display: none;">{{ form.langage.vars.value }}</div>
	<div id="note-id" style="display: none;">{{ form.code.vars.id }}</div>
	{{ form_row(form.name) }}
	{{ form_row(form.code, {'attr': {'class': 'monaco-editor'}}) }}
	{{ form_row(form.description) }}
	{{ form_row(form.img) }}
	{{ form_row(form.is_favori) }}
	{{ form_row(form.langage) }}
	{{ form_row(form.tag) }}
	{{ form_row(form.folder) }}
	<button class="btn">Valider</button>
	{{ form_end(form) }}

	<button class="btn">
		<a href="{{ path('app_account') }}">Retour</a>
	</button>


	<script src="https://cdnjs.cloudflare.com/ajax/libs/monaco-editor/0.52.2/min/vs/loader.min.js"></script>
	<script src="{{ asset('monaco/add-edit.js') }}"></script>
	{# ///////////////////////a retirer///////////////////////////////////////// #}
	<style>
		.monaco-editor {
			width: 100%; /* La largeur de l'éditeur */
			height: 500px; /* La hauteur de l'éditeur */
			border: 1px solid #ccc; /* Ajoute une bordure pour le visuel */
		}
	</style>
{% endblock %}
